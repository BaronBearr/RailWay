<Window x:Class="RailWay.AllWindow.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RailWay.AllWindow"
        mc:Ignorable="d"
        Title="UserWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Text="Выберите путь:" VerticalAlignment="Center"/>
            <ComboBox x:Name="tripsComboBox" Margin="5,0" VerticalAlignment="Center" Width="200" SelectionChanged="TripsComboBox_SelectionChanged"/>
        </StackPanel>
        <ListBox x:Name="ticketsListBox" Grid.Row="1" Margin="5"/>
    </Grid>

</Window>
