<Page x:Class="RailWay.AllPages.ScheduleAdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RailWay.AllPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ScheduleAdminPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5">
            <TextBlock Text="Выберите путь:" VerticalAlignment="Center"/>
            <ComboBox x:Name="tripsComboBox" Margin="5,0" VerticalAlignment="Center" Width="200" SelectionChanged="TripsComboBox_SelectionChanged"/>
        </StackPanel>
        <ListBox x:Name="ticketsListBox" Grid.Row="1" Margin="5"/>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal" >
            <Button Content="Удалить путь" Style="{StaticResource MainButton}" Click="DeleteSchedule_Click"/>
            <Button Content="Добавить путь" Style="{StaticResource MainButton}" Click="AddSchedule_Click"/>
        </StackPanel>
    </Grid>

</Page>
